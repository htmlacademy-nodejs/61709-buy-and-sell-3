mixin offers-list(offers, type)

  case type
    when `search`
      ul.search-results__list
        each offer, index in offers
          li.search-results__item
            div(class=`ticket-card ticket-card--color0${index + 1}`)
              .ticket-card__img
                img(src=`/img/${offer.picture}` srcset=`/img/${offer.picture} 2x` alt="Изображение товара")
              .ticket-card__info
                span.ticket-card__label= `${offer.type === 'buy' ? 'Куплю' : 'Продам'}`
                .ticket-card__categories
                  each category in offer.categories
                    a(href=(`/offers/category/${category.id}`))= category.title
                .ticket-card__header
                  h3.ticket-card__title
                    a(href=(`/offers/${offer.id}`))= offer.title
                  p.ticket-card__price
                    span.js-sum= offer.sum
                    |  ₽
                .ticket-card__desc
                  p= `${offer.description.length > 55 ? offer.description.slice(0, 52) + '...' : offer.description}`
    when `my-offers`
      ul
        each offer, index in offers
          li.tickets-list__item.js-card
            div(class=`ticket-card ticket-card--color0${index + 1}`)
              .ticket-card__img
                img(src=`/img/${offer.picture}` srcset=`/img/${offer.picture} 2x` alt="Изображение товара")
              .ticket-card__info
                span.ticket-card__label= `${offer.type === 'buy' ? 'Продам' : 'Куплю'}`
                .ticket-card__categories
                  each category in offer.categories
                    a(href=(`/offers/category/${category.id}`))= category.title
                .ticket-card__header
                  h3.ticket-card__title
                    a(href=(`/offers/edit/${offer.id}`))= offer.title
                  p.ticket-card__price
                    span.js-sum= offer.sum
                      |  ₽
              a.ticket-card__del.js-delete(href=(`/my/offers/${offer.id}`)) Удалить
    default
      ul
        each offer, index in offers
          li.tickets-list__item
            div(class=`ticket-card ticket-card--color0${index + 1}`)
              .ticket-card__img
                img(src=`/img/${offer.picture}` srcset=`/img/${offer.picture} 2x` alt="Изображение товара")
              .ticket-card__info
                span.ticket-card__label= `${offer.type === 'buy' ? 'Куплю' : 'Продам'}`
                .ticket-card__categories
                  each category in offer.categories
                    a(href=(`/offers/category/${category.id}`))= category.title
                .ticket-card__header
                  h3.ticket-card__title
                    a(href=(`/offers/${offer.id}`))= offer.title
                  p.ticket-card__price
                    span.js-sum= offer.sum
                    |  ₽
                .ticket-card__desc
                  p= `${offer.description.length > 55 ? offer.description.slice(0, 52) + '...' : offer.description}`
