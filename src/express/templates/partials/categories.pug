mixin categories(categoryList)

  section.categories-list
        h1.visually-hidden Сервис объявлений "Куплю - продам"
        ul.categories-list__wrapper
          each category, index in categoryList
            li.categories-list__item
              a.category-tile.category-tile--default(href="#")
                span.category-tile__image
                  img(src=`/img/cat${index > 0 ? `0${index + 1}` : ``}.jpg` srcset=`/img/cat${index > 0 ? `0${index + 1}` : ``}@2x.jpg 2x` alt="Иконка категории")
                span.category-tile__label= `${category} `
                  span.category-tile__qty.js-qty= `${Math.floor(Math.random() * 100)}`
